'use strict';

var app = angular.module('rails-timber',['ngRoute', 'ui.bootstrap', 'ngFileUpload', 'picardy.fontawesome']);

app.config(['$routeProvider', function($routeProvider){
  $routeProvider.
  when('/', {
    //asset_path enables routes to direct us from /index.html to new compressed path (something 16-based)
    templateUrl: "<%= asset_path('static_pages/index.html') %>",
    controller: "StaticPagesCtrl"
  }).
  when('/browse', {
    //asset_path enables routes to direct us from /index.html to new compressed path (something 16-based)
    templateUrl: "<%= asset_path('static_pages/browse.html') %>",
    controller: "RandomShowCtrl"
  }).
  when('/posts', {
    templateUrl: "<%= asset_path('posts/index.html') %>",
    controller: 'PostCtrl'
  }).
  when('/myitems', {
    templateUrl: "<%= asset_path('posts/new.html') %>",
    controller: 'PostNewCtrl'
  }).
  when('/mymatches', {
    templateUrl: "<%= asset_path('likes/mymatches.html') %>",
    controller: 'PostNewCtrl'
  }).
  when('/mytrades', {
    templateUrl: "<%= asset_path('likes/mytrades.html') %>",
    controller: 'PostNewCtrl'
  }).
  when('/posts/:id', {
    templateUrl: "<%= asset_path('posts/show.html') %>",
    controller: 'PostShowCtrl'
  })
}]);