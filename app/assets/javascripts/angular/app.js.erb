'use strict';

var app = angular.module('rails-timber',['ngRoute']);

app.config(['$routeProvider', function($routeProvider){
  $routeProvider.
  when('/', {
    //asset_path enables routes to direct us from /index.html to new compressed path (something 16-based)
    templateUrl: "<%= asset_path('static_pages/index.html') %>",
    controller: "StaticPagesCtrl"
  }).
  when('/browse', {
    //asset_path enables routes to direct us from /index.html to new compressed path (something 16-based)
    templateUrl: "<%= asset_path('static_pages/browse.html') %>",
    controller: "SignOutCtrl"
  })
}]);